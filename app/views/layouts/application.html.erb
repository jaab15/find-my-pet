<!DOCTYPE html>
<html>
  <head>
    <title>FindMyPet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB3JCbeJUt-GQZiyDTecxBUzKexK8xfjCk&libraries=places,visualization"></script>
    <!-- <script src="//maps.google.com/maps/api/js?key=AIzaSyB3JCbeJUt-GQZiyDTecxBUzKexK8xfjCk"></script> -->
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
    <script src="https://cdn.klokantech.com/maptilerlayer/v1/index.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-static-top">

      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= home_path %>">
            <%= image_tag "logo-main.png", class: "logo-nav" %>
          </a>
        </div>
        <!-- <div class="navbar-collapse collapse" id="petfinder-navbar">
          Id must be nav of the bootstrap mobile nav doesn't work  -->
          <div id="navbar" class="navbar-collapse collapse" >
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Lost Your Pet?', new_pet_path %></li>
              <li><%= link_to 'All Lost Pets', pets_path %></li>
              <li><%= link_to 'Spotted a pet?', new_sighting_path %></li>
              <li><%= link_to 'All Spotted Pets', sightings_path %></li>
              <% unless user_signed_in? %>
                <li> <a class="btn " data-toggle="modal" data-target="#SignIn"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span>Log In</a></li>
                <li> <a class="btn btn-primary" data-toggle="modal" data-target="#SignUp">Sign Up</a></li>

              <% else %>
                <!-- <li>
                  <p class="navbar-text"><%= current_user.first_name %></p>
                </li> -->

                <li class="dropdown">
                  <a href="#" class="dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= current_user.first_name %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li> <%= link_to 'Your Reports', users_path %>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to sessions_path, method: :delete do %>
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Sign out
                      <% end %>
                    </li>


                  </ul>
                </li>




              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div class="container">
        <div class="col-md-6 col-md-offset-3">
          <% if flash[:alert].present? %>
            <div class="alert alert-danger" style="margin-top:30px;">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <% if flash[:notice].present? %>
            <div class="alert alert-success" style="margin-top:30px;">
              <%= flash[:notice] %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>

      <%= render 'shared/sign_up' %>
      <%= render 'shared/sign_in' %>

      <%= render 'layouts/footer' %>
    </body>
  </html>
