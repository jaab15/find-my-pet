<div class="container">
  <div class="col-md-6 col-md-offset-3 sign-in">
    <h1>Sign In</h1>
    <%= form_tag sessions_path do %>
        <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, nil, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
        <%= submit_tag 'Sign In', class: "btn btn-default btn-primary btn-block" %>
    <% end %>
    <p>
      Don't have an account?
      <a class="#" data-dismiss="modal" data-toggle="modal" data-target="#SignUp">Sign Up</a>
    </p>
  </div>
</div>
